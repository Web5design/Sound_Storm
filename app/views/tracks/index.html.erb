<%= render partial: "shared/header" %>

<div id="content2">
	<h1>Check out new music from our community!</h1>

	<% Track.CATEGORIES.each do |category| %>
		<h2><%= category.capitalize %></h2>
		<div style="position: relative">
		<ul class="carousel">
			<div class="left disabled"></div>
			<div class="right active"></div>	
			<% Track.where(category: category).each do |track| %>
			<li>
				<div class="thumbnail">
					<a href="users#/tracks/<%=  track.id %>"><span class="carousel-track-name"><%= track.name %></span></a>
					<% if track.image.url =~ /missing\.png/ %>
						<img src="/blank_track.png">
					<% else %>
						<img src="<%= track.image.url %>">
					<% end %>
					<div class="play-button-thumbnail play">
						<div class="symbol">
							<div class="symbol1b"></div>
							<div class="symbol2b"></div>
						</div>
					</div>
					<audio src="<%= track.audio.url %>"></audio>
				</div>
			</li>
			<% end %>

		</ul>
		</div>
	<% end %>
</div>