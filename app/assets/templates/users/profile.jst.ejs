<span class="user-name"><%= user.escape('username') %></span><br>
<img 
	class="profile-picture"
	src="<%= user.escape('profile_picture_url') %>">
<div id="profile_info">
	<p><%= user.escape('first_name') %> <%= user.escape('last_name') %></p>

	# followers

	<a href="#/profile/edit" id="profile_edit">Edit</a>
	<button id="share">Share</button>
		
	<p id="user_bio"><%= user.escape('bio') %></p>
</div>
