<% var commentCount = SoundStorm.currentUser.comments.length %>
<span><%= commentCount %> <%= commentCount == 1 ? "comment" : "comments" %></span>
<a href="#/comments" class="view-all">View all</a>

<div class="sidebar-comments-container">
	
<% SoundStorm.currentUser.comments.sortBy(function(el) { return el.get("created_at") } ).splice(0, 3).forEach(function(comment) { %>
	<div class="sidebar-comment">
		<img src="<%= SoundStorm.currentUser.escape('profile_picture_url') %>">
		on <% if (comment.get("track")) { %>
			<%= comment.get("track").name  %>
		<% } else { %>
			<%= $(".temp").closest(".widget").find(".track-name").html() %>
		<% } %>

		<span class="create-date"><%= comment.escape("created_at").slice(0,10) %></span>
		   "<%= comment.escape("content") %>"
	</div>
<% }); %>
</div>
 