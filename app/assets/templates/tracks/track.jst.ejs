<div class="profile-widget widget track sound" data-track-id="<%= track.id %>">
	<hr>

	<div class="image-container">
		<img src="http://s3-us-west-2.amazonaws.com/soundstorm-development/users/profile_pictures/000/000/021/original/Screenshot_7_7_13_7_26_PM.png?1373250664">
	</div>

	

	<div class="play-area">
		<audio src="<%= track.escape("audio_url") %>"></audio>
		<div class="name-container">
			<div class="play-button play">
				<div class="symbol">
					<div class="symbol1"></div>
					<div class="symbol2"></div>
				</div>
			</div>
			<div class="name-inner-container">
				<span class="track-name"><%= track.escape("name") %></span>
			</div>
			
		</div>
		<div class="visualizer playable">
			<div class="seeker-container">
				<div class="seeker"></div>
			</div>
		</div>
	</div>
	

	<div class="buttons-and-stats">
		<%= JST['tracks/_like_buttons']({ track: track }) %>
		
		<button data-track-id="<%= track.id %>" class="add-to-set">Add to Set</button>
		<a href="#/tracks/<%= track.id %>/edit">Edit</a>
		<button class="remove">Remove</button>
	</div>
	
	<div class="pallet"></div>


</div>
<div class="comment-form hidden">
	<!-- CSRF? -->
	<img src="<%= SoundStorm.currentUser.escape('profile_picture_url') %>">
	<form>
	<input type="text" placeholder="write a comment..." name="">
	<input type="hidden" name="comment[author_id]" value="<%= SoundStorm.currentUser.id %>">
	<input type="hidden" name="comment[track_id]" value="">
	<input type="hidden" name="comment[offset]" value="">
	<input type="hidden" name="comment[track_time]" value="">	
	</form>
</div>
